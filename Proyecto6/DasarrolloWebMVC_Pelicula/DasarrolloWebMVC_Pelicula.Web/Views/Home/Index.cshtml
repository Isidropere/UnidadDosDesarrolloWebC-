@model IEnumerable<DasarrolloWebMVC_Pelicula.Web.Models.Pelicula>
@{
    ViewBag.Title = "Lista de Peliculas";
}
<!DOCTYPE html>

<hrml>
    <head>
        <meta name="viewport" content="width=divice-width" />
        <title>Index</title>
    </head>
<h1>Lista de Peliculas</h1>
<div class="html">
    <style type="text/css">
        table.tableizer-table {
            font-size: 16px;
            border: 1px solid #CCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        .tableizer-table td {
            padding: 4px;
            margin: 3px;
            border: 4px solid #CCC;
        }

        .tableizer-table th {
            background-color: #104E8B;
            color: #FFF;
            font-weight: bold;
        }
    </style>
</div>
<body>

    <table class="auto-style1">
        <tr class="auto-style2">
            <th>
                Codigo
            </th>
            <th></th>
            <th>
                Titulo
            </th>
            <th></th>

            <th>
                Director
            </th>
            <th></th>

            <th>
                Autor Principal
            </th>
            <th></th>

            <th>
                N: autores
            </th>
            <th></th>

            <th>
                Duracion
            </th>
            <th></th>

            <th>
                Estreno
            </th>
            <th></th>
        </tr>

        @foreach (var Pelicula in Model)
        {
            <tr class="tableizer-firstrow" aligan="left">
                <th>
                    @Html.DisplayFor(modelItem => Pelicula.Codigo)
                </th>
                <th></th>
                <th>
                    @Html.DisplayFor(modelItem => Pelicula.Titulo)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => Pelicula.Director)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => Pelicula.AutorPrincipal)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => Pelicula.NumAutor)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => Pelicula.Duracion)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => Pelicula.Estreno)
                </th>
                <th></th>
                <th>
                    <button> <a href="/Home/Borrar?codigo=@Pelicula.Codigo"> Borra  </a></button>
                </th>
                <th>
                    <button> <a href="/Home/Modificar?codigo=@Pelicula.Codigo">Modificar  </a> </button>
                </th>
            </tr>
        }

    </table>
    <button> <a href="/Home/Grabar">Agregar</a> </button>
</body>
</hrml>

