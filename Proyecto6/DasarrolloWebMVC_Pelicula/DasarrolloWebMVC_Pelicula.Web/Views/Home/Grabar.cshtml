
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Grabar</title>
</head>
<div class="html">
    <style type="text/css">
        table.tableizer-table {
            font-size: 16px;
            border: 1px solid #CCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        .tableizer-table td {
            padding: 4px;
            margin: 3px;
            border: 4px solid #CCC;
        }

        .tableizer-table th {
            background-color: #104E8B;
            color: #FFF;
            font-weight: bold;
        }
    </style>
</div>
<body>
    <div>
        <form method="post" action="/Home/Grabar">
            <h1>Agregar pelicula</h1>
            <table class="tableizer-table">

                <tr>
                    <td class="auto-style2">Titulo</td>
                    <th></th>
                    <td>
                        <input type="text" name="Titulo" />
                    </td>
                </tr>
                <tr>
                    <td class="auto-style2">Director</td>
                    <th></th>
                    <td>
                        <input type="text" name="Director" />
                    </td>
                </tr>
                <tr>
                    <td class="auto-style2">Autor Principal</td>
                    <th></th>
                    <td>
                        <input type="text" name="AutorPrincipal" />
                    </td>
                </tr>
                <tr>
                    <td class="auto-style2"> N: autores</td>
                    <th></th>
                    <td>
                        <input type="text" name="NumAutor" />
                    </td>
                </tr>

                <tr>
                    <td class="auto-style2">Duracion</td>
                    <th></th>
                    <td>
                        <input type="text" name="Duracion" />
                    </td>
                </tr>

                <tr>
                    <td class="auto-style2">Estreno</td>
                    <th></th>
                    <td>
                        <input type="text" name="Estreno" />
                    </td>
                </tr>
            </table>
            <br />
            <button class="auto-style2" type="submit">Confirmar</button>
            <button> @Html.ActionLink("Volver atra", "Index")</button>
        </form>
    </div>
</body>
</html>
