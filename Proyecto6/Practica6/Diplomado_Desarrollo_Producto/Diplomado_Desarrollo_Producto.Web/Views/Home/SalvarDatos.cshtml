
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SalvarDatos</title>
</head>
<body>
    <div>
        <form method="post" action="/Home/SalvarDatos">
            <h1>Agregar Producto</h1>
            <table class="tableizer-table">
                <tr>
                    <td class="auto-style2">Descripcion</td>
