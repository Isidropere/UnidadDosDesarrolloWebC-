@model IEnumerable<Diplomado_MVC_USAD_Pelicula.Web.Models.Pelicula>
@{
    ViewBag.Title = "Lista de Peliculas";
}
<h1>Lista de Peliculas</h1>
<div class="html">
    <style type="text/css">
        table.tableizer-table {
            font-size: 16px;
            border: 1px solid #CCC;
            font-family: Arial, Helvetica, sans-serif;
        }

        .tableizer-table td {
            padding: 4px;
            margin: 3px;
            border: 4px solid #CCC;
        }

        .tableizer-table th {
            background-color: #104E8B;
            color: #FFF;
            font-weight: bold;
        }
    </style>
    </div>
    <table class="tableizer-table">
        <tr class="tableizer-firstrow">
            <th>
                Titulo
            </th>
            <th></th>

            <th>
                Director
            </th>
            <th></th>

            <th>
                Autor Principal
            </th>
            <th></th>

            <th>
                Numero de autores
            </th>
            <th></th>

            <th>
                Duracion
            </th>
            <th></th>

            <th>
                Estreno
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="tableizer-firstrow">
                <th>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => item.Director)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => item.AutorPrincipal)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => item.NumeroAutor)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => item.Duracion)
                </th>
                <th></th>

                <th>
                    @Html.DisplayFor(modelItem => item.Estreno)
                </th>
                <th></th>
            </tr>
        }

    </table>

